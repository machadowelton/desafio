        "$ref": "#/definitions/Usuario"
      }
    },
    "Usuario": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "id do usuário"
        },
        "nomeCompleto": {
          "type": "string",
          "description": "Nome completo do usuário",
          "example": "Wanderley"
        },
        "cpf": {
          "type": "string",
          "description": "Cpf do usuario",
          "example": "12345678989"
        },
        "telefone": {
          "type": "string",
          "description": "Telefone do usuario",
          "example": "11989566598"
        },
        "endereco": {
          "type": "string",
          "description": "Endereço do usuario",
          "example": "Rua dos Jabutis, nº 440"
        },
        "email": {
          "type": "string",
          "description": "Email do usuario",
          "example": "email@email.com"
        }
      }
    },
    "UsuarioSemId": {
      "type": "object",
      "properties": {
        "nomeCompleto": {
          "type": "string",
          "description": "Nome completo do usuário",
          "example": "Wanderley"
        },
        "cpf": {
          "type": "string",
          "description": "Cpf do usuario",
          "example": "12345678989"
        },
        "telefone": {
          "type": "string",
